{
  "env": {
    "browser": true,
		"es6": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "double"],
    "indent": ["error", 1],
    "semi": ["error", "always"]
  },
  "ignorePatterns": ["dist/**", "node_modules/**"]
}